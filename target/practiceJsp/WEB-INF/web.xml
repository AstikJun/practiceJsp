<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >


<web-app>
    <filter>
        <filter-name>ServletFilter</filter-name>
        <filter-class>com.example.filters.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ServletFilter</filter-name>
        <url-pattern>/loginServlet</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>ProfileFilter</filter-name>
        <filter-class>com.example.filters.ProfileFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ProfileFilter</filter-name>
        <url-pattern>/profileServlet</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LogoutFilter</filter-name>
        <filter-class>com.example.filters.LogoutFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogoutFilter</filter-name>
        <url-pattern>/logoutServlet</url-pattern>
    </filter-mapping>
</web-app>

